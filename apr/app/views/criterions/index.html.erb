<p id="notice"><%= notice %></p>
<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
<script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>

<div>
<h1>Listing Criterions</h1>

<table class= "table table-striped">
  <thead>
    <tr>
      <th><center>Criterion#</center></th>
      <th><center>Description</center></th>
      <th><center>Field 1 Text</center></th>
      <th><center>Field 2 Text</center></th>
      <th>Action</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @criterions.each do |criterion| %>
      <tr>
        <td><center><%= criterion.criterion_number %></center></td>
        <td><%= criterion.description %></td>
        <td><%= criterion.field1 %></td>
        <td><%= criterion.field2 %></td>
        <td><center>
          <div class="btn-group">
            <%= link_to 'Show', criterion, class: "btn" %>
        <%= link_to 'Edit', edit_criterion_path(criterion), class: "btn", style: 'color: purple;' %>
  <%= link_to 'Destroy', criterion, method: :delete, data: { confirm: 'Are you sure?'}, class: "btn", style: 'color: red;' %>
      </center></td></div>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<p class="link-position-right"><%= link_to 'Add New Criterion', new_criterion_path, class: "btn btn-primary"  %></p>


